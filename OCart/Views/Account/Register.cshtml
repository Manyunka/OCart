<body>

    <div class="window-registr">
        <div class="container">
            
            <div class="row">
                <div class="col-6 left">
                    OCart<br /> 
                    Присоединись<br />
                    к крупному<br />
                    art<br />
                    сообществу<br />
                    России<br />
                    и стран СНГ<br />
                </div>
                <div class="col-6 right">
                    <div class="text-right">
                        Присоединиться 
                    </div>
                    <form class="form-horizontal">

                       
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input class="form-control" placeholder="Введите имя" /> 
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-10">

                                <input class="form-control" placeholder="Укажите ваш e-mail" /> 
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input class="form-control" placeholder="Пароль" /> 
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input class="form-control" placeholder="Подтвердите пароль" /> 
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        
                        <!--Выпадающий список-->
                        <div class="input-group col-md-10">
                            <select class="custom-select" id="inputGroupSelect04">
                                <option selected>Choose...</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div> <br />
                        <!--Кнопка регистрации-->
                        <div class="form-group">
                            <div style="  background: linear-gradient(to left, #ffffff,#fa7ad0)" class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-default">Зарегистрироваться</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>












