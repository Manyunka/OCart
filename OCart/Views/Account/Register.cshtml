@model OCart.Models.AccountViewModels.RegisterViewModel
@{ ViewData["Title"] = "Register"; }

<h2>@ViewData["Title"].</h2>

<html>
<head>
    <meta charset="UTF-8">
    <title>OCart</title>

    <link rel="stylesheet" type="text/css" href="~/css/registr.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css" integrity="sha384-Bfad6CLCknfcloXFOyFnlgtENryhrpZCe29RTifKEixXQZ38WheV+i/6YWSzkz3V" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>

    <div class="window-registr">
        <div class="container">

            <div class="row">
                <div class="col-6 left">
                    OCart<br />
                    Присоединись<br />
                    к крупному<br />
                    art<br />
                    сообществу<br />
                    России<br />
                    и стран СНГ<br />
                </div>
                <div class="col-6 right">
                    <div class="text-right">
                        Присоединиться
                    </div>
                    
                    <div style="text-align:center"> Уже есть аккаунт?<a asp-controller="Account" asp-action="Login" style="color:palevioletred; height:20px">Войти</a></div>
                    <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal">
                        <div class="form-group" style="height:55px">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="UserName" class="form-control" placeholder="Введите имя" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group" style="height:55px">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Email" class="form-control" placeholder="Укажите ваш e-mail" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group" style="height:55px">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Password" class="form-control" placeholder="Пароль" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group" style="height:60px">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Подтвердите пароль" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <!--Выпадающий список-->
                        <div style="width:282px; padding: 6px 15px; font-size:22px; color:dimgrey"> Укажите тип аккаунта</div>
                        <div class="input-group col-md-10" style="height:55px;">
                            <select asp-for="UserRole" class="custom-select" id="inputGroupSelect04">
                                <option value="Artists">Создаю искусство</option>
                                <option value="Customers">Постигаю искусство</option>
                            </select>
                            <span asp-validation-for="UserRole" class="text-danger"></span>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <br />
                        <!--Кнопка регистрации-->
                        <div class="form-group" style="width:282px; height:80px; padding: 0px 15px;">
                            <div style="  background: linear-gradient(to left,#ef8da5, #ffffff)" class="col-md-offset-2 col-md-10">
                                <button href="#" type="submit" class="btn btn-default" style="font-size:22px; font-family:Akrobat">Зарегистрироваться</button>
                            </div>
                            <div style="font-size:10px">Поддтверждаю свое согласие с <a href="#" style="color:palevioletred; margin:0;">политикой OCart </a></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/site.js"></script>
</body>
</html>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
