@model OCart.Models.AccountViewModels.LoginViewModel

@{ ViewData["Title"] = "Log in"; }

<h2>@ViewData["Title"].</h2>
<html>
<head>
    <meta charset="UTF-8">
    <title>OCart</title>

    <link rel="stylesheet" type="text/css" href="~/css/login.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css" integrity="sha384-Bfad6CLCknfcloXFOyFnlgtENryhrpZCe29RTifKEixXQZ38WheV+i/6YWSzkz3V" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>

    <div class="window-registr">
        <div class="container">

            <div class="row">
                <div class="col-6 left">

                </div>
                <div class="col-6 right">
                    <div class="text-right">
                        С возвращением!
                    </div>

                    <div style="text-align:center">Еще нет аккаунта?<a asp-controller="Account" asp-action="Register" style="color:palevioletred; height:20px">Регистрация</a></div>

                    <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal">
                        <div class="form-group" style="height:55px">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="UserName" class="form-control" placeholder="Логин или e-mail" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group" style="height:75px">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Password" class="form-control" placeholder="Пароль" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group" style="height:55px">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    <label asp-for="RememberMe">
                                        <input asp-for="RememberMe" />
                                        @Html.DisplayNameFor(m => m.RememberMe)
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <!--Кнопка-->
                        <div class="form-group" style="width:150px; height:80px; padding: 0px 15px;">
                            <div style="  background: linear-gradient(to left,#ef8da5, #ffffff)" class="col-md-offset-2 col-md-10">
                                <button href="#" type="submit" class="btn btn-default" style="font-size:22px; font-family:Akrobat">Войти</button>
                            </div>
                        </div>
                    </form>
                    <div style="text-align:center"><a asp-controller="Account" asp-action="ForgotPassword" style="color:palevioletred">Забыли пароль?</a>Мы отправим вам его на e-mail.</div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/site.js"></script>
</body>
</html>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
